@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    Layout = null;
}
@model RegisterViewModel
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BadBoysBoating</title>

    <environment names="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
        <link rel="stylesheet" href="~/css/menu.css" />
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.6/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
    @Html.ApplicationInsightsJavaScript(TelemetryConfiguration)
</head>
<body>
    <div id="register_window" class="dialog_window">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h2>@Localizer["String1"]</h2>
                </div>
                <div class="modal-body">
                    <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
                        <div class="validation" asp-validation-summary="ModelOnly" />
                        <div>
                            <p>@Localizer["String2"]</p>
                        </div>
                        <div class="input-group form-group">
                            <label class="input-group-addon" asp-for="UserName">@Localizer["String3"]</label>
                            <input type="text" class="form-control" asp-for="UserName" />
                            <span asp-validation-for="UserName" />
                        </div>
                        <div class="input-group form-group">
                            <label class="input-group-addon" asp-for="UserLogin">@Localizer["String4"]</label>
                            <input type="text" class="form-control" asp-for="UserLogin" />
                            <span asp-validation-for="UserLogin" />
                        </div>
                        <div class="input-group form-group">
                            <label class="input-group-addon" asp-for="Email">@Localizer["String5"]</label>
                            <input type="text" class="form-control" asp-for="Email" />
                            <span asp-validation-for="Email" />
                        </div>
                        <div class="input-group form-group">
                            <label class="input-group-addon" asp-for="Password">@Localizer["String6"]</label>
                            <input type="password" class="form-control" asp-for="Password" />
                            <span asp-validation-for="Password" />
                        </div>
                        <div class="input-group form-group">
                            <label class="input-group-addon" asp-for="ConfirmPassword">@Localizer["String7"]</label>
                            <input type="password" class="form-control" asp-for="ConfirmPassword" />
                            <span asp-validation-for="ConfirmPassword" />
                        </div>
                        <div class="input-group">
                            <label class="input-group-addon" asp-for="AccountType">@Localizer["String8"]</label>
                            <select asp-for="AccountType" asp-items="ViewBag.Companies"></select>
                        </div>
                        <div class="form-group modal-footer">
                            <input type='submit' value='@Localizer["String9"]' id='register' class='btn' />
                            <input type='button' value='@Localizer["String10"]' class='btn btn-default' data-dismiss='modal' />
                     </div>
                </form>
            </div>
                <div class="modal-footer">
                    <p>@Localizer["String11"]</p>
                    <input type='button' value='Vk' id='vk_register' class='btn' />
                    <input type='button' value='Fb' id='vk_register' class='btn' />
                    <input type='button' value='G+' id='vk_register' class='btn' />
                </div>
            </div>
        </div>
    </div>
</body>
</html>