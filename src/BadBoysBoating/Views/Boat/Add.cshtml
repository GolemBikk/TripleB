@{
    Layout = null;
}
@model BoatViewModel
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BadBoysBoating</title>

    <environment names="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
        <link rel="stylesheet" href="~/css/menu.css" />
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.6/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
    @Html.ApplicationInsightsJavaScript(TelemetryConfiguration)
</head>
<body>
    <div id="login_window" class="dialog_window">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h2>Добавление нового судна</h2>
                </div>
                <div class="modal-body">
                    <form asp-action="Add" asp-controller="Boat" asp-anti-forgery="true">
                        <div class="validation" asp-validation-summary="ModelOnly" />
                        <div>
                            <p>Введите свои данные:</p>
                        </div>
                        <div class="input-group form-group">
                            <label class="input-group-addon" asp-for="ManufacturerName">Производитель</label>
                            <input type="text" class="form-control" asp-for="ManufacturerName" />
                            <span asp-validation-for="ManufacturerName" />
                        </div>
                        <div class="input-group form-group">
                            <label class="input-group-addon" asp-for="BoatModel">Наименование модели</label>
                            <input type="text" class="form-control" asp-for="BoatModel" />
                            <span asp-validation-for="BoatModel" />
                        </div>
                        <div class="input-group form-group">
                            <label class="input-group-addon" asp-for="Lenght">Длина</label>
                            <input type="text" class="form-control" asp-for="Lenght" />
                            <span asp-validation-for="Lenght" />
                        </div>
                        <div class="input-group form-group">
                            <label class="input-group-addon" asp-for="Width">Ширина</label>
                            <input type="text" class="form-control" asp-for="Width" />
                            <span asp-validation-for="Width" />
                        </div>
                        <div class="input-group form-group">
                            <label class="input-group-addon" asp-for="Displacement">Водоизмещение</label>
                            <input type="text" class="form-control" asp-for="Displacement" />
                            <span asp-validation-for="Displacement" />
                        </div>                       
                        <div class="input-group form-group">
                            <label class="input-group-addon" asp-for="Speed">Скорость</label>
                            <input type="text" class="form-control" asp-for="Speed" />
                            <span asp-validation-for="Speed" />
                        </div>
                        <div class="input-group">
                            <label class="input-group-addon" asp-for="Type">Выберите тип судна</label>
                            <select asp-for="Type">
                                <option value="yacht">Яхта</option>
                                <option value="boat">Катер</option>
                            </select>
                        </div>
                        <div class="input-group">
                            <label class="input-group-addon" asp-for="Kind">Выберите операцию</label>
                            <select asp-for="Kind">
                                <option value="buy">Продажа</option>
                                <option value="rent">Аренда</option>
                            </select>
                        </div>
                        <div class="input-group form-group">
                            <label class="input-group-addon" asp-for="Description">Описание</label>
                            <input type="text" class="form-control" asp-for="Description" />
                            <span asp-validation-for="Description" />
                        </div>
                        <div class="form-group modal-footer">
                            <input type="submit" value="Добавить" id='add' class="btn" />
                            <input type='button' value='Отмена' class='btn btn-default' data-dismiss='modal' />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>